# For local development, you can create a .env file in the root of the project 
# and add the following environment variables.

# Example for PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/shippy?schema=public"

# JWT Secret Key
# This should be a long, random string for security.
JWT_SECRET="your-super-secret-and-long-jwt-key"
JWT_EXPIRES_IN="1d"

# Local LLM Configuration (e.g., using Ollama)
# The API endpoint for the LLM service
LLM_API_URL="http://localhost:11434/v1/chat/completions"
# The name of the model to use (e.g., gemma:2b, llama3)
LLM_MODEL_NAME="gemma:2b"